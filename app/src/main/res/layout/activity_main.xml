<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplayValues"

        android:text="@string/zero"

        android:gravity="end"

        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@color/white"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridButtons"

        android:padding="16dp"
        android:background="@color/display_values_container"

     />

    <GridLayout
        android:id="@+id/gridButtons"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        android:background="@color/buttons_container"

        android:gravity="center"

        android:rowCount="4"
        android:columnCount="4"
        android:useDefaultMargins="true"
        >


        <Button
            android:id="@+id/btnSeven"
            android:text="@string/seven"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnEight"
            android:text="@string/eight"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnNine"
            android:text="@string/nine"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnDivision"
            android:text="@string/division"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/OperatorButtonStyle"/>


        <Button
            android:id="@+id/btnFour"
            android:text="@string/four"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnFive"
            android:text="@string/five"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnSix"
            android:text="@string/six"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnMultiplication"
            android:text="@string/multiplication"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/OperatorButtonStyle"/>


        <Button
            android:id="@+id/btnOne"
            android:text="@string/one"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnTwo"
            android:text="@string/two"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnThree"
            android:text="@string/three"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnSubtraction"
            android:text="@string/subtraction"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/OperatorButtonStyle"/>


        <Button
            android:id="@+id/btnZero"
            android:text="@string/zero"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnComma"
            android:text="@string/comma"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/NumberButtonStyle"/>
        <Button
            android:id="@+id/btnSum"
            android:text="@string/sum"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/OperatorButtonStyle"/>
        <Button
            android:id="@+id/btnEquals"
            android:text="@string/equals"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"

            style="@style/OperatorButtonStyle"/>

    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>